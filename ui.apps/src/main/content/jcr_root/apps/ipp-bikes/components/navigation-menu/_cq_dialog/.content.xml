<?xml version="1.0" encoding="UTF-8"?>
<jcr:root 
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    
    jcr:primaryType="nt:unstructured"
    jcr:title="Navigation Menu v2"
    sling:resourceType="cq/gui/components/authoring/dialog"
>

    <content
        granite:class="cmp-navigationmenu__editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container"
    >
        <items jcr:primaryType="nt:unstructured">            
            <tabs 
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
            >
                <items jcr:primaryType="nt:unstructured">


                    <tablist
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        jcr:title="Tab List"
                        jcr:description="Nested Coral Multifield"
                    >
                        <items
                            jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                                <items
                                    jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                        margin="{Boolean}true">
                                        <items
                                            jcr:primaryType="nt:unstructured">
                              


                            <navItemFirstList
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}true"
                                fieldLabel="Nav - firt layer">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    name="./navItemFirstList">
                                    <items jcr:primaryType="nt:unstructured">
                                        <title
                                            jcr:primaryType="nt:unstructured"
                                            fieldLabel="Accordion Title"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            emptyText="Title"
                                            name="./title"/>
                                        <link
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                            rootPath="/content/ipp-bikes"
                                            fieldLabel="Link"
                                            name="./link"
                                        /> 

                                        <navItemSecondList
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                            composite="{Boolean}true"
                                            fieldLabel="Nav - secound layer">
                                            <field
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                                name="./navItemSecondList">
                                                <items jcr:primaryType="nt:unstructured">
                                                
                                                    <title
                                                        jcr:primaryType="nt:unstructured"
                                                        fieldLabel="Accordion Title"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Title"
                                                        name="./title"/>
                                                    <link
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        rootPath="/content/ipp-bikes"
                                                        fieldLabel="Link"
                                                        name="./link"
                                                    /> 


                                                     <navItemThirdList
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldLabel="Nav - third layer">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./navItemThirdList">
                                                            <items jcr:primaryType="nt:unstructured">
                                                            
                                                                <title
                                                                    jcr:primaryType="nt:unstructured"
                                                                    fieldLabel="Accordion Title"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    emptyText="Title"
                                                                    name="./title"/>
                                                                <link
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    rootPath="/content/ipp-bikes"
                                                                    fieldLabel="Link"
                                                                    name="./link"
                                                                /> 


                                                            </items>
                                                        </field>
                                                    </navItemThirdList>


                                                </items>
                                            </field>
                                        </navItemSecondList>
                                    </items>
                                </field>
                            </navItemFirstList>

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tablist>



                    <navIconSelect
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Icon Select"
                        sling:orderBefore="cq:styles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                    >
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true"
                            >
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                    >
                                        <items jcr:primaryType="nt:unstructured">

                                            <navicon
                                                granite:class="cmp-image__editor-file-upload"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                class="cq-droptarget"
                                                fileNameParameter="./fileName"
                                                fileReferenceParameter="./fileReference"
                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                name="./navicon"
                                            />

                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </navIconSelect>



                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:orderBefore="cq:styles"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                    >
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true"
                            >
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                    >
                                        <items jcr:primaryType="nt:unstructured">


                                    <iconLink
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        rootPath="/content/ipp-bikes"
                                        fieldLabel="Main Icon Link"
                                        name="./iconLink"
                                    /> 

                                    <title
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="The Title"
                                        name="./title"/>
                                    <text
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="The Text"
                                        name="./text"/>


                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>

                    

                </items>
            </tabs>            
        </items>
    </content>

</jcr:root>